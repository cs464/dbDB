<!-- Table storing Communications information from the communication database -->
<table border="3" cellpadding="7">
  <tr><th>Communication ID</th>
    <th>Content</th>
    <th>Theme</th>
    <th>Edit/Delete</th>
  </tr>
  <td><b><%= link_to communication.communicationID, communication_path(communication)%></b></td>
  <td><%=communication.content %></td> 
  <td><%=communication.theme %></td>
  <td>
    <!-- Edit Button -->
    <div style="float:left;">
      <%= button_to "Edit", edit_communication_path(communication), :method => :get %>
    </div>
    <!-- Delete Button -->
    <div style="float:right;">
      <%= button_to "Delete", communication, :confirm => "Are you sure you want to delete this communication?", :method => :delete%>
    </div> 
</table>



