<!-- Paginated information from the people database, generated by rails -->
<%= will_paginate @people, :class => 'flickr_pagination' %>
<ul class="users"> <%= render @people %>  </ul>
<div class="container" style="float:right;">
	<div class="row">
		<div class="span4">
			<!-- Add new person button -->
			<div class="btn-group">
				<a href='/people/new'>
					<button class="btn btn-info">Add New Person</button>
					<!-- Button to the group by query -->
					<a href='/people/groupby'>
						<button class="btn btn-success">View People Being Pursued by Multiple Users</button>
					</div>
				</div> <!-- span4 -->
			</div> <!-- row -->
		</div> <!-- container -->


