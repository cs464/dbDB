<!-- Paginated information from the users database, generated by rails -->
<%= will_paginate @users, :class => 'flickr_pagination' %>
<ul class="users">  <%= render @users %>  </ul>
<div class="container" style="float:right;">
	<div class="row">
		<div class="span4">
			<!-- Add new user button -->
				<div class="btn-group">
					<a href='/users/new'>
						<button class="btn btn-info">Add New User</button>
					</div>
				</div>
			</div> <!-- span4 -->
		</div> <!-- row -->
	</div> <!-- container -->
