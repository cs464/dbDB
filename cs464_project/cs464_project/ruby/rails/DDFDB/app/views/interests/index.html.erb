<!-- Paginated information from the interests database, generated by rails -->
<%= will_paginate @interests, :class => 'flickr_pagination' %>
<ul class="users">  <%= render @interests %>  </ul>
<div class="container" style="float:right;">
	<div class="row">
		<div class="span4">
			<!-- Add new interest button -->
				<div class="btn-group">
					<a href='/interests/new'>
						<button class="btn btn-info">Add New Interest</button>
					</div>
				</div>
			</div> <!-- span4 -->
		</div> <!-- row -->
	</div> <!-- container -->



