<!-- Table storing Interest information from the interests database -->
<table border="3" cellpadding="10">
	<tr>
		<th>Interest ID</th>
		<th>Interest Name</th>
		<th>Interest Details</th>
		<th>Associated Person ID</th>
		<th>Edit/Delete</th>
	</tr>
	<td><b><%= link_to interest.interestID, interest_path(interest)%></b></td>
	<td><%=interest.name%></td>
	<td><%=interest.details%></td>
	<td><%=interest.personID%></td>
	<td>
		<!-- Edit Button -->
		<div style="float:left;">
			<%= button_to "Edit", edit_interest_path(interest), :method => :get %>
		</div>
		<!-- Delete Button -->
		<div style="float:right;">
			<%= button_to "Delete", interest, :confirm => "Are you sure you want to delete this interest?", :method => :delete%>
		</div> 
	</td>
</tr>
</table>






